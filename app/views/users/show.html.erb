<% provide( :title, @user.name) %>

<div class="row">
	<aside class="span4">
	<section>
		<%= gravatar_for @user %>
	</section>
		<section>
			<h1>	
				<span><%= @user.name %></span>
				<span><%= @user.email %></span>
			</h1>
		</section>
		<section>
		<%= render 'shared/stats' %>
		</section>
		<section>
		<%= render 'follow_form' if signed_in? %>
		</section>
	</aside>
	<div class="span8">
	<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>) </h3>
		<ol class="microposts">
		<%= render @microposts ,collection: current_user %>
		</ol>
		
		<% end %>
	</div>
</div>

